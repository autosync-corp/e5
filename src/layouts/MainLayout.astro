---
import Navbar from '@/core/components/Navbar.vue';
import Footer from '@/core/components/Footer.vue';
import '@/assets/main.css';
import '@/assets/fonts/fonts.css';

export interface Props {
  title?: string;
}

const { title = 'E5 Wheels - Exclusively Engineered for Corvettes' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/favicon.ico">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Libre+Franklin:wght@400;500;600;700;800;900&family=Work+Sans:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body>
    <noscript>
      <strong>We're sorry but E5 Wheels doesn't work properly without JavaScript enabled. Please enable it to continue.</strong>
    </noscript>
    <Navbar client:load transition:persist/>
    <div style="min-height: 100dvh">
      <main class="mt-107">
        <slot />
      </main>
    </div>
    <Footer client:visible transition:persist/>
  </body>
</html>

<style is:global>
body {
  margin: auto;
  padding: 0;
  width: 100dvw;
  min-width: 100dvw;
  max-width: 1920px;
  min-height: 100dvh;
  overflow-x: hidden;
}
</style>
