---
import MainLayout from '@/layouts/MainLayout.astro';
import {
    DAYTONA_BRAND_NAME, DAYTONA_GLOSS_BLACK, DAYTONA_LOGO,
    FORM_FORGED_LOGO_BLACK,
    PROCESS_DIAGRAM_1, PROCESS_DIAGRAM_2, PROCESS_DIAGRAM_3,
    PROCESS_DIAGRAM_4, SEBRING_BRAND_NAME, SEBRING_BRONZE, SEBRING_DETAIL_1,
    SEBRING_DETAIL_2, SEBRING_DETAIL_3, SEBRING_DETAIL_4, SEBRING_DETAILS_BANNER,
    SEBRING_GLOSS_BLACK, SEBRING_HERO_IMAGE, SEBRING_LIGHTWEIGHT_DESIGN_BANNER,
    SEBRING_LOGO,
    SEBRING_MOTORSPORT_STYLING_BANNER, SEBRING_PRECISION_FITMENT_BANNER, SEBRING_TITANIUM_BRUSHED,
    SEBRING_VETTE_GALLERY_1, SEBRING_VETTE_GALLERY_2, SEBRING_VETTE_GALLERY_3, SPEEDWAY_BRAND_NAME,
    SPEEDWAY_LOGO,
    SPEEDWAY_TITANIUM_BRUSHED_TINT_BEAUTY_LEFT,
} from "@/pages/wheels/constants/Wheels.ts";
import Button from "@/core/components/Button.vue";
import BannerFullWidthWithLegend from "@/core/components/BannerFullWidthWithLegend.vue";
import {Orientations} from "@/core/types/App.ts";
import ImageWithLegend from "@/core/components/ImageWithLegend.vue";
import BannerBesideDetailArea from "@/core/components/BannerBesideDetailArea.vue";
import {
    PENDING_ROUTE,
    WHEELS_DAYTONA_ROUTE,
    GALLERY_WHEELS_ROUTE,
    WHEELS_SPEEDWAY_ROUTE
} from "@/core/constants/Routes.ts";
---

<MainLayout title="Sebring - E5 Wheels">
    <BannerFullWidthWithLegend class="h-[636px]" image={SEBRING_HERO_IMAGE} alt={SEBRING_BRAND_NAME} orientation={Orientations.CENTER} />

    <!-- Logo and Description -->
    <section class="container-e5 py-20">
        <div class="flex justify-between items-start mb-12">
            <img src={SEBRING_LOGO} alt={`${SEBRING_BRAND_NAME} Logo`} class="w-[684px] h-auto" />
            <img src={FORM_FORGED_LOGO_BLACK} alt="Form Forged" class="w-[195px] h-auto" />
        </div>

        <p class="text-[24px] leading-[30px] text-black/50 mb-16 max-w-[1024px]">
            The Sebring is part of our Form Forged Series — a multi-spoke mesh wheel engineered for strength and precision. Its intricate split-spoke design maximizes rigidity while minimizing weight. With a bold concave profile tailored to Corvette fitments, the Sebring blends motorsport engineering with aggressive styling for performance on both street and track.
        </p>

        <h2 class="text-center text-[20px] tracking-[4px] text-black/45 uppercase">
            EXCLUSIVELY ENGINEERED FOR CORVETTES
        </h2>

        <div class="grid grid-cols-3 gap-8">
            <ImageWithLegend alt={SEBRING_BRAND_NAME} image={SEBRING_GLOSS_BLACK}>
                <div class="text-center">
                    <p class="text-[16px] tracking-[1.5px] text-black/40 uppercase mb-2">GLOSS BLACK</p>
                    <p class="text-[16px] tracking-[1.5px] text-black/40 uppercase mb-2">AVAILABLE FOR C6_C7_C8</p>
                    <p class="text-[16px] tracking-[1.5px] text-black/60 uppercase mb-2">STARTING AT $600 PER WHEEL</p>
                    <p class="text-[16px] text-e5-red uppercase mt-4 font-medium">IN STOCK</p>
                </div>
            </ImageWithLegend>

            <ImageWithLegend alt={SEBRING_BRAND_NAME} image={SEBRING_TITANIUM_BRUSHED}>
                <div class="text-center">
                    <p class="text-[16px] tracking-[1.5px] text-black/40 uppercase mb-2">TITANIUM BRUSHED TINT</p>
                    <p class="text-[16px] tracking-[1.5px] text-black/40 uppercase mb-2">AVAILABLE FOR C6_C7_C8</p>
                    <p class="text-[16px] tracking-[1.5px] text-black/60 uppercase mb-2">STARTING AT $600 PER WHEEL</p>
                    <p class="text-[16px] text-e5-red uppercase mt-4 font-medium">IN STOCK</p>
                </div>
            </ImageWithLegend>

            <ImageWithLegend alt={SEBRING_BRAND_NAME} image={SEBRING_BRONZE}>
                <div class="text-center">
                    <p class="text-[16px] tracking-[1.5px] text-black/40 uppercase mb-2">BRONZE BRUSHED TINT</p>
                    <p class="text-[16px] tracking-[1.5px] text-black/40 uppercase mb-2">AVAILABLE FOR C6_C7_C8</p>
                    <p class="text-[16px] tracking-[1.5px] text-black/60 uppercase mb-2">STARTING AT $600 PER WHEEL</p>
                    <p class="text-[16px] text-e5-red uppercase mt-4 font-medium">IN STOCK</p>
                </div>
            </ImageWithLegend>
        </div>

        <div class="text-center mt-12">
            <Button client:visible primary class="px-16">
                <span>
                    SHOP {SEBRING_BRAND_NAME}
                </span>
            </Button>
        </div>
    </section>

    <!-- Precision Fitment Banner -->
    <BannerFullWidthWithLegend
            alt={`${SEBRING_BRAND_NAME} Precision Fitment`}
            image={SEBRING_PRECISION_FITMENT_BANNER}
            orientation={Orientations.LEFT}
            class="h-[874px] relative"
    >
        <article class="absolute top-0 left-0 max-w-[1024px] px-20">
            <h2 class="text-[48px] uppercase tracking-[9.6px]">
                <span class="text-e5-red">Precision Fitment</span>
            </h2>
            <p class="text-[20px] text-black/60 uppercase tracking-[4.8px] leading-[30px]">
                Exclusively engineered for Corvettes, the {SEBRING_BRAND_NAME} locks in perfect stance, hub-centric balance, and uncompromising stability.
            </p>

            <div class="mt-28 px-28">
                <Button client:visible secondary link={PENDING_ROUTE}>
                    <span class="text-[20px] font-black tracking-[1.5px]">LEARN ABOUT<br/>OUR PROCESS</span>
                </Button>
            </div>
        </article>
    </BannerFullWidthWithLegend>

    <!-- Lightweight Design Banner -->
    <BannerFullWidthWithLegend
            alt={`${SEBRING_BRAND_NAME} Lightweight Design`}
            image={SEBRING_LIGHTWEIGHT_DESIGN_BANNER}
            orientation={Orientations.LEFT}
            class="h-[874px]"
    >
        <article class="max-w-[720px] h-[874px] flex flex-col justify-end mb-24">
            <h2 class="text-[48px] uppercase tracking-[9.6px] leading-[20px] mb-6">
                <span class="text-e5-red">LIGHTWEIGHT DESIGN</span>
            </h2>
            <p class="text-[20px] uppercase tracking-[4.8px] leading-[30px]">
                We carve away excess material with purpose. Every cut reduces weight, sharpens response, and delivers rotational performance you can feel.
            </p>
        </article>
    </BannerFullWidthWithLegend>

    <BannerBesideDetailArea
            alt={`${SEBRING_BRAND_NAME} Motorsport Styling`}
            image={SEBRING_MOTORSPORT_STYLING_BANNER}
            class="h-[874px] border border-e5-red"
    >
        <Fragment slot="right">
            <article class="max-w-[720px] h-[874px] flex flex-col justify-center mb-24 px-20">
                <h2 class="text-[48px] uppercase tracking-[9.6px]">
                    <span class="text-e5-red">MOTORSPORT STYLING</span>
                </h2>
                <p class="text-[20px] uppercase tracking-[4.8px]">
                    A deep concave profile and aggressive spoke geometry bring race-bred character to the street without sacrificing refinement.
                </p>
            </article>
        </Fragment>
    </BannerBesideDetailArea>

    <BannerFullWidthWithLegend
            alt={`${SEBRING_BRAND_NAME} Motorsport Styling`}
            image={SEBRING_DETAILS_BANNER}
            orientation={Orientations.RIGHT}
            class="h-[874px] border border-e5-red"
    >
        <article class="max-w-[720px] h-[874px] flex flex-col justify-end mb-24 text-end">
            <h2 class="text-[48px] uppercase tracking-[9.6px]">
                <span class="text-e5-red">DETAILS MATTER</span>
            </h2>
            <p class="text-[20px] uppercase tracking-[4.8px]">
                A CLOSER LOOK INTO E5 ENGINEERING.
            </p>

            <div class="my-12 flex justify-end px-16">
                <Button client:visible secondary link={GALLERY_WHEELS_ROUTE}>
                    <span class="text-[20px] font-black tracking-[1.5px]">VIEW<br/>WHEEL GALLERY</span>
                </Button>
            </div>
        </article>
    </BannerFullWidthWithLegend>

    <!-- Stills Banner -->
    <section class="w-full h-[716px] relative overflow-hidden">
        <img src={SEBRING_VETTE_GALLERY_1} alt="Daytona Details" class="w-full h-full object-cover" />
    </section>

    <!-- Our Process Section -->
    <section class="container-e5 text-center">
        <h2 class="text-[48px] tracking-[9.6px] leading-[48px] text-e5-red uppercase mb-6 mt-16">
            OUR PROCESS
        </h2>
        <p class="text-[18px] tracking-[4.8px] leading-[18px] text-black/50 uppercase max-w-[1485px] mx-auto my-12">
            Engineered with forged DNA and crafted through flow forming, our Form Forged Series delivers strength and agility—without compromising daily drivability.
        </p>

        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-16 mb-16">
            <div>
                <div class="relative flex items-center justify-center mb-8">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t-2 border-e5-red"></div>
                    </div>
                    <span class="relative bg-white px-4 text-e5-red text-[16px] tracking-[3px] font-bold uppercase">STEP 1</span>
                </div>
                <ImageWithLegend image={PROCESS_DIAGRAM_1} alt="Step 1">
                    <b>CAST PREFORM & DESIGN</b>
                    Initial cast preform with design.
                </ImageWithLegend>
            </div>
            <div>
                <div class="relative flex items-center justify-center mb-8">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t-2 border-e5-red"></div>
                    </div>
                    <span class="relative bg-white px-4 text-e5-red text-[16px] tracking-[3px] font-bold uppercase">STEP 2</span>
                </div>
                <ImageWithLegend image={PROCESS_DIAGRAM_2} alt="Step 2">
                    <b>HEATING & SPINNING</b>
                    Heated workpiece rotated on mandrel.
                </ImageWithLegend>
            </div>
            <div>
                <div class="relative flex items-center justify-center mb-8">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t-2 border-e5-red"></div>
                    </div>
                    <span class="relative bg-white px-4 text-e5-red text-[16px] tracking-[3px] font-bold uppercase">STEP 3</span>
                </div>
                <ImageWithLegend image={PROCESS_DIAGRAM_3} alt="Step 3">
                    <b>FLOW FORMING STRETCH</b>
                    Rollers stretch and widen the barrel
                </ImageWithLegend>
            </div>
            <div>
                <div class="relative flex items-center justify-center mb-8">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t-2 border-e5-red"></div>
                    </div>
                    <span class="relative bg-white px-4 text-e5-red text-[16px] tracking-[3px] font-bold uppercase">STEP 4</span>
                </div>
                <ImageWithLegend image={PROCESS_DIAGRAM_4} alt="Step 4">
                    <b>FINAL PROFILE</b>
                    Finished barrel is significantly stronger and lighter.
                </ImageWithLegend>
            </div>
        </div>
    </section>

    <!-- Finishing Section -->
    <section class="container-e5 pb-8 text-center">
        <h2 class="text-[48px] tracking-[9.6px] leading-[20px] text-e5-red uppercase mb-6">
            FINISHING
        </h2>
        <p class="text-[24px] tracking-[4.8px] leading-[30px] text-black/50 uppercase max-w-[1485px] mx-auto my-16">
            Our Form Forged Series is available in Gloss Black, Titanium Brushed Tint, Bronze Brushed Tint, AND DARK BRONZE— finishes that embody the essence of timeless, modern, and bold design. Each surface is crafted to elevate the wheel's form while enduring the demands of the road, all <span class="text-[#d31d25]/65">backed by our 5-year finishing warranty</span>.
        </p>
    </section>

    <!-- Detail Images Grid -->
    <section class="w-full">
        <div class="grid grid-cols-2">
            <img src={SEBRING_DETAIL_1} alt="Detail 1" class="w-full h-auto" />
            <img src={SEBRING_DETAIL_3} alt="Detail 3" class="w-full h-auto" />
        </div>
        <div class="grid grid-cols-2">
            <img src={SEBRING_DETAIL_2} alt="Detail 2" class="w-full h-auto" />
            <img src={SEBRING_DETAIL_4} alt="Detail 4" class="w-full h-auto" />
        </div>
    </section>

    <!-- Gallery Banner 1 -->
    <section class="w-full h-[716px] relative overflow-hidden border border-e5-red">
        <img src={SEBRING_VETTE_GALLERY_2} alt="Daytona Gallery" class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-black/5"></div>
    </section>

    <!-- Shop Section with Three Wheels -->
    <section class="container-e5 py-16">
        <h2 class="text-center text-[20px] tracking-[4px] text-black/45 uppercase">
            EXCLUSIVELY ENGINEERED FOR CORVETTES
        </h2>

        <div class="grid grid-cols-3 gap-8">
            <ImageWithLegend alt={SEBRING_BRAND_NAME} image={SEBRING_GLOSS_BLACK}>
                <div class="text-center">
                    <p class="text-[16px] tracking-[1.5px] text-black/40 uppercase mb-2">GLOSS BLACK</p>
                    <p class="text-[16px] tracking-[1.5px] text-black/40 uppercase mb-2">AVAILABLE FOR C5_C6_C7_C8</p>
                    <p class="text-[16px] tracking-[1.5px] text-black/60 uppercase mb-2">STARTING AT $600 PER WHEEL</p>
                    <p class="text-[16px] text-e5-red uppercase mt-4 font-medium">IN STOCK</p>
                    <div class="mt-8">
                        <Button client:visible primary link={PENDING_ROUTE}>
                            ADD TO CART
                        </Button>
                    </div>
                </div>
            </ImageWithLegend>

            <ImageWithLegend alt={SEBRING_BRAND_NAME} image={SEBRING_TITANIUM_BRUSHED}>
                <div class="text-center">
                    <p class="text-[16px] tracking-[1.5px] text-black/40 uppercase mb-2">TITANIUM BRUSHED TINT</p>
                    <p class="text-[16px] tracking-[1.5px] text-black/40 uppercase mb-2">AVAILABLE FOR C5_C6_C7_C8</p>
                    <p class="text-[16px] tracking-[1.5px] text-black/60 uppercase mb-2">STARTING AT $600 PER WHEEL</p>
                    <p class="text-[16px] text-e5-red uppercase mt-4 font-medium">IN STOCK</p>
                    <div class="mt-8">
                        <Button client:visible primary link={PENDING_ROUTE}>
                            ADD TO CART
                        </Button>
                    </div>
                </div>
            </ImageWithLegend>

            <ImageWithLegend alt={SEBRING_BRAND_NAME} image={SEBRING_BRONZE}>
                <div class="text-center">
                    <p class="text-[16px] tracking-[1.5px] text-black/40 uppercase mb-2">BRONZE BRUSHED TINT</p>
                    <p class="text-[16px] tracking-[1.5px] text-black/40 uppercase mb-2">AVAILABLE FOR C5_C6_C7_C8</p>
                    <p class="text-[16px] tracking-[1.5px] text-black/60 uppercase mb-2">STARTING AT $600 PER WHEEL</p>
                    <p class="text-[16px] text-e5-red uppercase mt-4 font-medium">IN STOCK</p>
                    <div class="mt-8">
                        <Button client:visible primary link={PENDING_ROUTE}>
                            ADD TO CART
                        </Button>
                    </div>
                </div>
            </ImageWithLegend>
        </div>
    </section>

    <BannerFullWidthWithLegend
            alt={`${SEBRING_BRAND_NAME} GALLERY`}
            image={SEBRING_VETTE_GALLERY_3}
            orientation={Orientations.RIGHT}
            class="h-[716px] border border-e5-red"
    >
        <article class="max-w-[720px] h-[716px] text-end pt-12">
            <h2 class="text-[48px] uppercase tracking-[9.6px]">
                <span class="text-e5-red">{SEBRING_BRAND_NAME} GALLERY</span>
            </h2>
            <p class="text-[20px] uppercase tracking-[4.8px]">
                A CLOSER LOOK INTO E5 ENGINEERING.
            </p>

            <div class="my-12 px-16">
                <Button client:visible secondary link={GALLERY_WHEELS_ROUTE}>
                    <span class="text-[20px] font-black tracking-[1.5px]">VIEW DAYTONA<br/>GALLERY</span>
                </Button>
            </div>
        </article>
    </BannerFullWidthWithLegend>

    <!-- Discover More Form Forged Series Wheels -->
    <section class="container-e5 pt-12">
        <h2 class="text-center text-[20px] tracking-[4px] text-black/50 uppercase">
            DISCOVER MORE FORM FORGED SERIES WHEELS
        </h2>

        <div class="grid grid-cols-2 gap-16 mb-12">
            <ImageWithLegend alt={DAYTONA_BRAND_NAME} image={DAYTONA_GLOSS_BLACK}>
                <div class="text-center">
                    <img src={DAYTONA_LOGO} alt={DAYTONA_BRAND_NAME} class="mx-auto mb-4 h-[28px]" />
                    <p class="text-[16px] tracking-[1.5px] text-black/40 uppercase mb-2">GLOSS BLACK</p>
                    <p class="text-[16px] tracking-[1.5px] text-black/40 uppercase mb-2">EXCLUSIVELY FOR C5_C6_C7_C8</p>
                    <p class="text-[16px] tracking-[1.5px] text-black/60 uppercase mb-2">AVAILABLE IN OTHER FINISHES</p>
                    <p class="text-[16px] text-e5-red uppercase mt-4 font-medium">IN STOCK</p>
                    <div class="mt-8 uppercase">
                        <Button client:visible primary link={WHEELS_DAYTONA_ROUTE}> EXPLORE {DAYTONA_BRAND_NAME} </Button>
                    </div>
                </div>
            </ImageWithLegend>

            <ImageWithLegend alt={SPEEDWAY_BRAND_NAME} image={SPEEDWAY_TITANIUM_BRUSHED_TINT_BEAUTY_LEFT}>
                <div class="text-center">
                    <img src={SPEEDWAY_LOGO} alt={SPEEDWAY_BRAND_NAME} class="mx-auto mb-4 h-[28px]" />
                    <p class="text-[16px] tracking-[1.5px] text-black/40 uppercase mb-2">TITANIUM BRUSHED TINT</p>
                    <p class="text-[16px] tracking-[1.5px] text-black/40 uppercase mb-2">EXCLUSIVELY FOR C6_C7_C8</p>
                    <p class="text-[16px] tracking-[1.5px] text-black/60 uppercase mb-2">AVAILABLE IN OTHER FINISHES</p>
                    <p class="text-[16px] text-e5-red uppercase mt-4 font-medium">IN STOCK</p>
                    <div class="mt-8 uppercase">
                        <Button client:visible primary link={WHEELS_SPEEDWAY_ROUTE}> EXPLORE {SPEEDWAY_BRAND_NAME} </Button>
                    </div>
                </div>
            </ImageWithLegend>
        </div>
    </section>

    <div class="text-center hover:bg-black/5 transition-colors duration-300 py-6 text-[20px] text-black/50 font-medium tracking-[2px] uppercase]" >
        BACK TO TOP
    </div>
</MainLayout>