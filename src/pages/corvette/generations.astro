---
import MainLayout from '@/layouts/MainLayout.astro';
---

<MainLayout title="E5 Wheels - Choose Your Corvette">
  <div class="w-full bg-white -mt-107">
    <!-- C8 Wheel Collection -->
    <section class="relative w-full h-[460px] overflow-hidden group">
      <div class="absolute inset-0">
        <img
          src="/9ea0c45425720914c239a68c1a5297045182c12c.png"
          alt="Corvette C8"
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-black/20"></div>
      </div>
      <div class="absolute inset-0 flex items-center">
        <div class="container-e5">
          <a href="/wheels?generation=c8" class="inline-block">
            <div class="bg-[#d31d25] px-12 py-6 hover:bg-[#b11a21] transition-colors cursor-pointer">
              <h2 class="text-white text-[20px] font-['Franklin_Gothic_Demi'] tracking-[2px] uppercase leading-[20px]">
                C8 WHEEL COLLECTION
              </h2>
            </div>
          </a>
        </div>
      </div>
    </section>

    <!-- C7 Wheel Collection -->
