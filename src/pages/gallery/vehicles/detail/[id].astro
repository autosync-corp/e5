---
import MainLayout from '@/layouts/MainLayout.astro';
import VetteGallery from "@/gallery/constants/VetteGallery.ts";
import VehicleCard from "@/gallery/components/VehicleCard.vue";
import VehicleImagesGallery from "@/gallery/components/VehicleImagesGallery.vue";
import Button from "@/core/components/Button.vue";
import VehicleWheelSizeFit from "@/gallery/components/VehicleWheelSizeFit.vue";
import {WHEEL_GALLERY_BANNERS_BY_BRAND} from "@/wheels/constants/Wheels.ts";
import {GALLERY_DETAIL_ROUTE, GALLERY_VEHICLES_ROUTE, PENDING_ROUTE, WHEELS_ROUTE} from "@/core/constants/Routes.ts";

export function getStaticPaths() {
  return VetteGallery.map((vehicle) => ({
    params: { id: vehicle.id.toString() },
    props: { vehicle },
  }));
}

const { vehicle } = Astro.props;
const corvetteGalleryImages = VetteGallery.filter(v => v.model === vehicle.model).slice(0, 3);
const wheelGalleryImages = WHEEL_GALLERY_BANNERS_BY_BRAND[vehicle.wheelBrand] || [];
---

<MainLayout title={`${vehicle.year} ${vehicle.trim} - E5 Wheels Gallery`}>
  <div class="w-full h-full">
    <!-- Secondary Navigation -->
    <section class="w-full bg-white border-b border-gray-200 py-6">
      <div class="container-e5 flex items-center justify-between">
        <a
          href={GALLERY_VEHICLES_ROUTE}
          class="font-franklin-book text-xs text-black/40 tracking-[3.2px] uppercase hover:text-black transition-colors"
        >
          BACK TO GALLERY
        </a>

        <nav class="flex gap-8">
          <a href={PENDING_ROUTE} class="font-franklin-book text-xs text-black tracking-[3.2px] uppercase hover:text-e5-red transition-colors">SHOP</a>
          <a href={PENDING_ROUTE} class="font-franklin-book text-xs text-black tracking-[3.2px] uppercase hover:text-e5-red transition-colors">SIZES</a>
          <a href={PENDING_ROUTE} class="font-franklin-book text-xs text-black tracking-[3.2px] uppercase hover:text-e5-red transition-colors">FINISHES</a>
          <a href={PENDING_ROUTE} class="font-franklin-book text-xs text-black tracking-[3.2px] uppercase hover:text-e5-red transition-colors">WARRANTY</a>
        </nav>
      </div>
    </section>

    <VehicleImagesGallery client:load trim={vehicle.trim} images={vehicle.galleryImages} />

    <!-- Vehicle & Wheel Details Section -->
    <section class="container-e5 pt-4 px-24">
      <div class="flex items-start justify-between mb-8">
        <div></div>
        <div class="text-right">
          <p class="text-lg text-black/50 opacity-70 tracking-wide leading-[30px]">
            VEHICLE MODEL
          </p>
          <p class="text-2xl text-black opacity-70 tracking-wide leading-[30px] mt-1">
            {vehicle.year} {vehicle.trim}
          </p>
        </div>
      </div>

      <VehicleWheelSizeFit
        client:load
        image={vehicle.wheelImage}
        alt={vehicle.wheelModel}
        logo={vehicle.wheelLogo}
        title={vehicle.wheelModel}
      >
        <div slot="details">
          <div>
            <p class="text-lg text-black/50 opacity-70 tracking-wide leading-[30px]">
              SIZES
            </p>
            <ul class="list-disc pl-8">
              {vehicle.sizingDetails.map((size: string) => (
                <li class="text-lg text-black opacity-70 tracking-wide leading-[30px]">
                  {size}
                </li>
              ))}
            </ul>
          </div>
          <div class="ml-auto">
            <p class="text-black/50 opacity-70 tracking-wide leading-[30px]">
              FINISH
            </p>
            <ul class="list-disc pl-8">
              <li class="text-black opacity-70 tracking-wide leading-[30px]">
                {vehicle.wheelFinish}
              </li>
            </ul>
          </div>
        </div>
        <div slot="actions" class="flex gap-6">
          <Button client:load primary class="w-full" link="pending">SHOP {vehicle.wheelModel}</Button>
          <Button client:load secondary class="w-full" link="pending">EXPLORE {vehicle.wheelBrand}</Button>
        </div>
      </VehicleWheelSizeFit>
    </section>

    <!-- C7 Corvette Gallery Section -->
    <section class="container-e5 pt-24">
      <h2 class="text-2xl text-black opacity-70 tracking-wide leading-[34px] mb-4">
        C7 CORVETTE GALLERY
      </h2>

      <div class="grid grid-cols-3 gap-6">
        {corvetteGalleryImages.map((item) => (
          <VehicleCard
            client:load
            image={item.image}
            year={item.year}
            trim={item.trim}
            wheelModel={item.wheelModel}
            wheelFinish={item.wheelFinish}
            link={`${GALLERY_DETAIL_ROUTE}/${item.id}`}
          />
        ))}
      </div>

      <div class="w-full flex justify-center">
        <a href={GALLERY_VEHICLES_ROUTE}>
          <Button client:load primary class="mt-12">
            VIEW FULL GALLERY
          </Button>
        </a>
      </div>
    </section>

    <section class="container-e5 py-24 px-24">
      <h2 class="text-4xl text-black font-medium opacity-70 tracking-wide leading-[34px] mb-8">
        {vehicle.wheelModel} WHEEL GALLERY
      </h2>

      <div class="grid grid-cols-3 gap-12">
        {wheelGalleryImages.map((wheel: any) => (
          <div class="w-full h-auto overflow-hidden flex items-center justify-center">
            <a href={`${WHEELS_ROUTE}/${vehicle.wheelBrand}/${vehicle.wheelModel}`}>
              <img src={wheel.image} alt={wheel.finish} class="w-full object-cover cursor-pointer" />
            </a>
          </div>
        ))}
      </div>
    </section>
  </div>
</MainLayout>
