---
import MainLayout from '@/layouts/MainLayout.astro';
import { corvetteGalleryData } from "@/pages/gallery/constants/CorvetteGalleryData.ts";
import type { CorvetteGalleryItem } from "@/pages/gallery/constants/CorvetteGalleryData.ts";
import VehicleCard from "@/pages/gallery/components/VehicleCard.vue";
import VehicleImagesGallery from "@/pages/gallery/components/VehicleImagesGallery.vue";
import Button from "@/core/components/Button.vue";
import VehicleWheelDetails from "@/pages/gallery/components/VehicleWheelDetails.vue";
import WheelGalleryImages from "@/pages/gallery/components/WheelGalleryImages.vue";
import {GALLERY_DETAIL_ROUTE, GALLERY_VEHICLES_ROUTE, WHEELS_ROUTE} from "@/core/constants/Routes.ts";

export function getStaticPaths() {
  return corvetteGalleryData.map((vehicle) => ({
    params: { id: vehicle.galleryId || '' },
    props: { vehicleData: vehicle },
  }));
}

const { vehicleData } = Astro.props as { vehicleData: CorvetteGalleryItem };

// Helper function to get images from the vehicle data
function getGalleryImages(vehicle: CorvetteGalleryItem): string[] {
  if (!vehicle.galleryId || !vehicle.images || vehicle.images.length === 0) {
    return [];
  }

  // Map the images to full paths
  return vehicle.images.map((file: string) => `/assets/images/gallery/corvette/${vehicle.galleryId}/${file}`);
}

// Map CSV data to page format
const vehicle = {
  id: vehicleData.galleryId,
  galleryId: vehicleData.galleryId,
  year: vehicleData.year || 'N/A',
  model: vehicleData.submodel || 'N/A',
  trim: vehicleData.vehicleTitle || vehicleData.trim || 'N/A',
  title: vehicleData.vehicleTitle || vehicleData.trim || 'N/A',
  style: vehicleData.wheelStyle || 'N/A',
  finish: vehicleData.wheelFinish || 'N/A',
  image: `/assets/images/gallery/corvette/${vehicleData.galleryId}/0.webp`,
  galleryImages: getGalleryImages(vehicleData),
  wheelLogo: `/assets/images/logos/e5-${vehicleData.wheelStyle?.toLowerCase().replace(' ', '-')}.webp`,
  tires: vehicleData.tireModel || 'N/A',
};

// Get similar corvettes (same model)
const corvetteGalleryImages = corvetteGalleryData
  .filter(v => v.submodel === vehicleData.submodel && v.galleryId !== vehicleData.galleryId)
  .slice(0, 3)
  .map((item, index) => ({
    id: item.galleryId || `vehicle-${index}`,
    image: `/assets/images/gallery/corvette/${item.galleryId}/0.webp`,
    year: item.year || 'N/A',
    trim: item.vehicleTitle || item.trim || 'N/A',
    title: item.vehicleTitle || item.trim || 'N/A',
    wheelModel: item.wheelStyle || 'N/A',
    wheelFinish: item.wheelFinish || 'N/A',
  }));
---

<MainLayout title={`${vehicle.trim} - E5 Wheels Gallery`}>
  <div class="w-full h-full">
    <div class="relative">
      <div class="absolute w-full bg-black/60 py-6">
        <div class="container-e5 flex items-center justify-end">
          <a
              href={GALLERY_VEHICLES_ROUTE}
              class="font-franklin-book text-xs text-white tracking-[3.2px] uppercase hover:text-white transition-colors"
          >
            BACK TO GALLERY
          </a>

          <!--<nav class="flex gap-8">-->
          <!--  <a href={PENDING_ROUTE} class="font-franklin-book text-xs text-white tracking-[3.2px] uppercase hover:text-e5-red transition-colors">SHOP</a>-->
          <!--  <a href={PENDING_ROUTE} class="font-franklin-book text-xs text-white tracking-[3.2px] uppercase hover:text-e5-red transition-colors">SIZES</a>-->
          <!--  <a href={PENDING_ROUTE} class="font-franklin-book text-xs text-white tracking-[3.2px] uppercase hover:text-e5-red transition-colors">FINISHES</a>-->
          <!--  <a href={PENDING_ROUTE} class="font-franklin-book text-xs text-white tracking-[3.2px] uppercase hover:text-e5-red transition-colors">WARRANTY</a>-->
          <!--</nav>-->
        </div>
      </div>

      <VehicleImagesGallery client:only="vue" trim={vehicle.trim} images={vehicle.galleryImages} />
    </div>

    <!-- Vehicle & Wheel Details Section -->
    <section class="container-e5 pt-4">
      <div class="flex items-start justify-between mb-8">
        <div></div>
        <div class="text-right">
          <p class="text-lg text-black/50 opacity-70 tracking-wide leading-[30px]">
            VEHICLE MODEL
          </p>
          <p class="text-2xl font-bold text-black opacity-70 tracking-wide leading-[30px] mt-1"> {vehicle.trim} </p>
        </div>
      </div>

      <VehicleWheelDetails
        client:only="vue"
        partF={vehicleData.partF}
        wheelPartR={vehicleData.wheelPartR}
        vehicleWheelStyle={vehicle.style}
        vehicleWheelFinish={vehicle.finish}
        vehicleWheelSizeF={vehicleData.wheelSizeF}
        vehicleOffesetF={vehicleData.offesetF}
        vehicleWheelSizeRear={vehicleData.wheelSizeRear}
        vehicleOffsetR={vehicleData.offsetR}
        wheelStyleLogo={vehicle.wheelLogo}
      />
    </section>

    <!-- C7 Corvette Gallery Section -->
    <section class="container-e5 pt-24">
      <h2 class="text-2xl text-black opacity-70 tracking-wide leading-[34px] mb-4">
        {vehicle.model} GALLERY
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
        {corvetteGalleryImages.map((item) => (
          <VehicleCard
            client:only="vue"
            image={item.image}
            year={item.year}
            title={item.title}
            style={item.wheelModel}
            finish={item.wheelFinish}
            link={`${GALLERY_DETAIL_ROUTE}/${item.id}`}
          />
        ))}
      </div>

      <div class="w-full flex justify-center mt-12">
        <Button client:only="vue" primary={true} secondary={false} disabled={false} link={GALLERY_VEHICLES_ROUTE}>
          VIEW FULL GALLERY
        </Button>
      </div>
    </section>

    <WheelGalleryImages
      client:only="vue"
      partF={vehicleData.partF}
      wheelPartR={vehicleData.wheelPartR}
      wheelStyle={vehicle.style}
      wheelsRoute={WHEELS_ROUTE}
    />
  </div>
</MainLayout>
